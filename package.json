{
  "name": "japanese-text-vector-dev",
  "version": "0.1.0",
  "private": true,
  "description": "Development environment for japanese-text-vector",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "test": "cargo test",
    "test:wasm": "wasm-pack test --chrome --headless",
    "clean": "rm -rf pkg pkg-node pkg-bundler target",
    "serve": "python3 -m http.server 8000",
    "publish": "npm run build && cd pkg && npm publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "wasm-pack": "^0.12.0"
  }
}